fruits = ["apple", "banana", "cherry"]

for fruit in fruits:
    print("-- Kolejna iteracja")
    print(fruit)
    if fruit == "banana":
        break
        print("A to się wyświetli czy nie, jak myślisz?")
print("Ile razy wyświetli się ten komunikat?")

